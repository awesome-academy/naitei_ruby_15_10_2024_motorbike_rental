<% if rental.pending? %>
  <%= button_to approve_admin_rental_path(rental),
                method: :patch,
                class: "btn btn-success btn-sm me-2" do %>
    <i class="bi bi-check-lg"></i>
    <%= t("views.rentals.index.approve") %>
  <% end %>

  <button type="button"
          class="btn btn-danger btn-sm"
          data-bs-toggle="modal"
          data-bs-target="#rejectModal-<%= rental.id %>">
    <i class="bi bi-x-lg"></i>
    <%= t("views.rentals.index.reject") %>
  </button>
<% end %>

<% if rental.approved? %>
  <%= button_to rent_admin_rental_path(rental),
                method: :patch,
                class: "btn btn-primary btn-sm me-2" do %>
    <i class="bi bi-check-lg"></i>
    <%= t("views.rentals.index.rent") %>
  <% end %>
<% end %>

<% if rental.renting? %>
  <%= button_to return_admin_rental_path(rental),
                method: :patch,
                class: "btn btn-info btn-sm me-2" do %>
    <i class="bi bi-arrow-return-left"></i>
    <%= t("views.rentals.index.return") %>
  <% end %>
<% end %>
