<%= provide :title, t("views.models.edit.title", name: @model.name) %>
<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h3 class="mb-0">
        <i class="fas fa-edit"></i> <%= t "views.models.edit.title", name: @model.name %>
      </h3>
    </div>

    <div class="card-body">
      <%= form_with model: @model, local: true, html: { class: "needs-validation", novalidate: true } do |form| %>
        <div class="mb-3">
          <%= form.label :price_per_day, t("views.models.edit.price_per_day"), class: "form-label" %>
          <%= form.number_field :price_per_day, step: 0.01, class: "form-control", required: true, placeholder: t("views.models.edit.price_placeholder") %>
          <div class="invalid-feedback">
            <%= t("views.models.edit.price_invalid_feedback") %>
          </div>
        </div>

        <div class="d-flex justify-content-between">
          <%= link_to t("views.models.edit.back"), model_path(@model), class: "btn btn-secondary" %>
          <%= form.submit t("views.models.edit.update_button"), class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
