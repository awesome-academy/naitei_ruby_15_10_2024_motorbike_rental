<div class="container mt-5">
  <h1 class="text-center mb-4"><%= t("users.new.title") %></h1>

  <%= form_with(model: @user, url: users_path, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= t("users.new.errors.header") %></h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, t("users.new.name"), class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: t("users.new.name"), required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :email, t("users.new.email"), class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: t("users.new.email"), required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :phone_number, t("users.new.phone_number"), class: "form-label" %>
      <%= form.telephone_field :phone_number, class: "form-control", placeholder: t("users.new.phone_number"), required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :password, t("users.new.password"), class: "form-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: t("users.new.password"), required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :password_confirmation, t("users.new.password_confirmation"), class: "form-label" %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: t("users.new.password_confirmation"), required: true %>
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <%= form.submit t("users.new.register_button"), class: "btn btn-primary" %>
      <%= link_to t("users.new.back_to_home"), root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
