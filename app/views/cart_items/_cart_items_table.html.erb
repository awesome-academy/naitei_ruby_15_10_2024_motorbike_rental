<% if cart_items.any? %>
  <table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th><%= t("views.cart_items.index.model_image") %></th>
        <th><%= t("views.cart_items.index.model_name") %></th>
        <th><%= t("views.cart_items.index.price_per_day") %></th>
        <th><%= t("views.cart_items.index.quantity_in_cart") %></th>
        <th><%= t("views.cart_items.index.price") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "cart_item", collection: cart_items, locals: { start_datetime: start_datetime, end_datetime: end_datetime } %>
    </tbody>
  </table>

  <div class="d-flex justify-content-between align-items-center mt-4">
    <h3>
      <%= t("views.cart_items.index.total_price") %> 
      <span id="cart-total-price">â‚«<%= number_with_delimiter(total_price, delimiter: ".") %></span>
    </h3>

    <% if total_price > 0 %>
      <%= link_to t("views.cart_items.index.checkout"), "#", 
        class: "btn btn-lg btn-success",
        data: {
          bs_toggle: "modal",
          bs_target: "#checkoutModal"
        }
      %>
    <% else %>
      <button class="btn btn-lg btn-success disabled" disabled>
        <%= t("views.cart_items.index.checkout") %>
      </button>
    <% end %>
  </div>
<% else %>
  <p class="text-center text-muted"><%= t("views.cart_items.index.empty") %></p>
<% end %>
