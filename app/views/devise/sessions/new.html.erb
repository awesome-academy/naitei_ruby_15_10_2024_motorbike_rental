<div class="login-container container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header text-center bg-primary text-white">
          <h2><%= t("sessions.login") %></h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
            <div class="mb-3">
              <%= f.label :email, t("sessions.email"), class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, t("sessions.password"), class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
                <%= f.label :remember_me, t("sessions.remember_me"), class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit t("sessions.login_button"), class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
