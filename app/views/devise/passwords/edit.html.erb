<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4"><%= t("devise.passwords.change_password") %></h2>

      <div class="card shadow">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="mb-3">
              <%= f.label :password, t("devise.passwords.new_password"), class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">
                  (<%= t("devise.passwords.minimum_password_length", count: @minimum_password_length) %>)
                </small>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, t("devise.passwords.confirm_new_password"), class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit t("devise.passwords.change_my_password"), class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
